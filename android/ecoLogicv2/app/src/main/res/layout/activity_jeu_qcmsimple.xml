        app:layout_constraintTop_toBottomOf="@+id/TVID" />

    <TextView
        android:id="@+id/TVIntitule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
