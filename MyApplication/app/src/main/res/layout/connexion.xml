<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondlogin">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="292dp"
        android:layout_height="72dp"
        android:fontFamily="serif"
        android:text="EcoLogic"
        android:textAlignment="center"
        android:textSize="50sp"

        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="49dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="204dp"
        android:layout_height="22dp"
        android:layout_marginTop="432dp"
        android:fontFamily="serif"
        android:text="Vous n'Ãªtes pas encore membre?"
        android:textAlignment="center"

        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Entrez l'adresse mail"
        android:inputType="textEmailAddress"


        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:visibility="visible"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/editText4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="291dp"
        android:ems="10"
        android:hint="Entrez le mot de passe"
        android:inputType="textPassword"

        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button11"
        android:layout_width="112dp"
        android:layout_height="44dp"
        android:layout_marginTop="349dp"
        android:background="@drawable/buttonshape"
        android:text="Se Connecter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button27"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="454dp"
        android:background="@android:color/transparent"
        android:text="Inscrivez-vous"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>